{
  "adb":{
    "terminal_encoding": "utf-8",
    "adb_path": "adb"
  },
  "image_logging_config": {
    "backupCount": 16
  },
  "logging_config": {
    "version": 1,
    "formatters": {
      "simple": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "simple",
        "filename": "./logs/application.log",
        "maxBytes": 1048576,
        "backupCount": 3
      },
      "console": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "simple"
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": ["file_handler", "console"]
    }
  }
}